class name extends SuperClass
{
	constructor()
	{}
	
	get area()
	{}
	
	set area(value)
	{
		
	}
	
}
class StaticMethodCall {
  constructor() {
    console.log(StaticMethodCall.staticMethod()); 
    // 'static method has been called.' 

    console.log(this.constructor.staticMethod()); 
    // 'static method has been called.' 
  }

  static staticMethod() {
    return 'static method has been called.';
  }
}

